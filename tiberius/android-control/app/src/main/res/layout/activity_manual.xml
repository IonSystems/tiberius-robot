<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_blue"
                tools:context=".ThumbControlActivity">

    <!-- *************************************** HEADER *************************************** -->
    <TextView android:id="@+id/manual_header"
              android:layout_width="550dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:text="@string/manual_header"
              android:textStyle="italic|bold"
              android:textSize="50sp"
              android:textColor="@android:color/white"
              android:gravity="center"/>



    <!-- *************************************** MENU BUTTON *************************************** -->
    <Button android:id="@+id/menu_manual"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/menu_btn"
            android:background="@android:color/white"
            android:onClick="goMenu"/>

    <!-- *************************************** LEFT SPEED SET *************************************** -->
    <SeekBar android:id="@+id/left_seekbar"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:maxHeight="350dp"
        android:rotation="270"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-50dp"
        android:max="200"
        android:progress="100"
        android:thumb="@drawable/seek_thumb"/>

    <TextView android:id="@+id/left_speed_text"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"/>


    <!-- *************************************** RIGHT SPEED SET *************************************** -->
    <SeekBar android:id="@+id/right_seekbar"
             android:layout_width="300dp"
             android:layout_height="350dp"
             android:maxHeight="350dp"
             android:rotation="270"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="-50dp"
             android:max="200"
             android:progress="100"
             android:thumb="@drawable/seek_thumb"/>

    <TextView android:id="@+id/right_speed_text"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"/>




</RelativeLayout>
